@model DienDanCongNgheThongTin.Models.framework.BaiHoc
@{
    ViewBag.Title = "ChiTietBaiHoc";
    Layout = "~/Views/Shared/_layoutUserAcc.cshtml";
}
@section styles{
    <link rel="stylesheet" type="text/css" href="~/Assets/user/css/ChiTietBaiHoc.css"/>
    }
@if(Model == null)
    {
        <div><h1>Bài học chưa được cập nhật!</h1></div>
    }
 else
    {
        <div class="content">
            <h1>@Model.TenBaiHoc</h1> 
            <img src="@Model.imgUrl" />
            <h2>Mục tiêu của khóa học @Model.TenBaiHoc này là!</h2>
            <div class="mota">@Model.MoTa</div>
        </div>
    }

