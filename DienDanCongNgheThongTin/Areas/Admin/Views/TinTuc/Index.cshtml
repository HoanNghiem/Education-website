@model IEnumerable<DienDanCongNgheThongTin.Models.framework.TinTuc>

@{
    ViewBag.Title = "Admin - Tin Tức";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Tin Tức</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table" border="1" cellpadding="5" cellspacing="0">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TacGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imgUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChuyenMuc.TenChuyenMuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TieuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TacGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imgUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChuyenMuc.TenChuyenMuc)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaTinTuc }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaTinTuc }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaTinTuc })
        </td>
    </tr>
}

</table>
